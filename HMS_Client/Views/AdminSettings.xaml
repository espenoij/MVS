<UserControl
    x:Class="HMS_Client.AdminSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    mc:Ignorable="d"
    d:DesignHeight="1100"
    d:DesignWidth="1900">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
            <ColumnDefinition
                Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <telerik:GroupBox
            Header="GENERAL SETTINGS"
            Grid.Column="0"
            Grid.Row="0"
            Margin="8">

            <Grid
                Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Regulation Standard"
                            VerticalAlignment="Center" />
                    
                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <telerik:RadComboBox
                            Name="cboRegulationStandard"
                            SelectionChanged="cboRegulationStandard_SelectionChanged" />

                    </Viewbox>

                </Grid>

                <Grid
                    Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Client is Master"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <CheckBox
                            Name="chkClientIsMaster"
                            IsChecked="{Binding Path=clientIsMaster, Mode=TwoWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Checked="chkClientIsMaster_Checked"
                            Unchecked="chkClientIsMaster_Unchecked" />

                    </Viewbox>

                </Grid>

                <Grid
                    Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Enable EMS Page"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <CheckBox
                            Name="chkEnableEMS"
                            IsChecked="{Binding Path=enableEMS, Mode=TwoWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Click="chkEnableEMS_Click" />

                    </Viewbox>

                </Grid>

            </Grid>

        </telerik:GroupBox>

        <telerik:GroupBox
            Header="SERVER"
            Grid.Column="1"
            Grid.Row="0"
            Margin="8">

            <Grid
                Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Server Address"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbServerAddress"
                            Text="{Binding Path=serverAddress}"
                            LostFocus="tbServerAddress_LostFocus"
                            KeyDown="tbServerAddress_KeyDown" />

                    </Viewbox>

                </Grid>

                <Grid
                    Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Server Port"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbServerPort"
                            Text="{Binding Path=serverPort}"
                            LostFocus="tbServerPort_LostFocus"
                            KeyDown="tbServerPort_KeyDown" />

                    </Viewbox>

                </Grid>

                <Grid
                    Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>


                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Data Request:" />

                    </Viewbox>


                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">

                            <telerik:RadButton
                                Name="btnDataRequestStart"
                                Content="Start"
                                Click="btnDataRequestStart_Click"
                                Width="110"
                                Margin="4" />

                            <telerik:RadButton
                                Name="btnDataRequestStop"
                                Content="Stop"
                                Click="btnDataRequestStop_Click"
                                Width="110"
                                Margin="4" />

                        </StackPanel>

                    </Viewbox>

                </Grid>

                <Grid
                    Grid.Row="3">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="2*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Socket Console Window"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <telerik:RadButton
                            Name="btnTCPIPTest"
                            Content="Open"
                            Width="110"
                            Click="btnTCPIPTest_Click"
                            Margin="4"
                            HorizontalAlignment="Right" />

                    </Viewbox>

                </Grid>

            </Grid>

        </telerik:GroupBox>

        <!--<telerik:GroupBox
            Header="USER INTERFACE"
            Grid.Column="2"
            Grid.Row="0"
            Margin="8">

            <Grid
                Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
