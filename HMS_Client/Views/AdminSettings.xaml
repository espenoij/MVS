            </Grid>

        </telerik:GroupBox>-->

        <telerik:GroupBox
            Header="CAP"
            Grid.Column="2"
            Grid.Row="0"
            Margin="8">

            <Grid
                Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                </Grid.RowDefinitions>

                <!--Helideck Category-->
                <Grid
                    Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Name="lbHelideckCategory_CAP"
                            Content="Helideck Category"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <telerik:RadComboBox
                            Name="cboHelideckCategory_CAP"
                            HorizontalAlignment="Right"
                            SelectionChanged="cboHelideckCategory_CAP_SelectionChanged" />

                    </Viewbox>
                </Grid>

                <!--Default Helideck Category-->
                <Grid
                    Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Name="lbDefaultHelideckCategory_CAP"
                            Content="Default Helideck Category"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <telerik:RadComboBox
                            Name="cboDefaultHelideckCategory_CAP"
                            HorizontalAlignment="Right"
                            SelectionChanged="cboDefaultHelideckCategory_CAP_SelectionChanged" />

                    </Viewbox>
                </Grid>

                <!--Offshore Weather Report Email-->
                <Grid
                    Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="3*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Name="lbEnableReportEmail"
                            Content="Enable Offshore Weather Report Email"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <CheckBox
                            Name="chkEnableReportEmail"
                            IsChecked="{Binding Path=enableReportEmail, Mode=TwoWay}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            Checked="chkEnableReportEmail_Checked"
                            Unchecked="chkEnableReportEmail_Unchecked" />

                    </Viewbox>

                </Grid>

            </Grid>

        </telerik:GroupBox>

        <telerik:GroupBox
            Header="TIMING"
            Grid.Column="3"
            Grid.Row="0"
            Margin="8">


            <Grid
                Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                    <RowDefinition
                        Height="*" />
                </Grid.RowDefinitions>

                <Grid
                    Grid.Row="0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Data Request Frequency"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbDataRequestFrequency"
                            Width="100"
                            Text="{Binding Path=dataRequestFrequency}"
                            LostFocus="tbDataRequestFrequency_LostFocus"
                            KeyDown="tbDataRequestFrequency_KeyDown" />

                    </Viewbox>
                    
                </Grid>

                <Grid
                    Grid.Row="1">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="2*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Sensor Status Request Frequency"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbSensorStatusRequestFrequency"
                            Width="100"
                            Text="{Binding Path=sensorStatusRequestFrequency}"
                            LostFocus="tbSensorStatusRequestFrequency_LostFocus"
                            KeyDown="tbSensorStatusRequestFrequency_KeyDown" />

                    </Viewbox>
                </Grid>

                <Grid
                    Grid.Row="2">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="UI Update Frequency"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbUIUpdateFrequency"
                            Width="100"
                            Text="{Binding Path=uiUpdateFrequency}"
                            LostFocus="tbUIUpdateFrequency_LostFocus"
                            KeyDown="tbUIUpdateFrequency_KeyDown" />

                    </Viewbox>
                </Grid>

                <Grid
                    Grid.Row="3">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Sensor Data Timeout"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbDataTimeout"
                            Width="100"
                            Text="{Binding Path=dataTimeout}"
                            LostFocus="tbDataTimeout_LostFocus"
                            KeyDown="tbDataTimeout_KeyDown" />

                    </Viewbox>
                    
                </Grid>

                <Grid
                    Grid.Row="4">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="2*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Chart Data Update Frequency (20m)"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbChartDataUpdateFrequency20m"
                            Width="100"
                            Text="{Binding Path=chartDataUpdateFrequency20m}"
                            LostFocus="tbChartDataUpdateFrequency20m_LostFocus"
                            KeyDown="tbChartDataUpdateFrequency20m_KeyDown" />

                    </Viewbox>
                    
                </Grid>

                <Grid
                    Grid.Row="5">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition
                            Width="2*" />
                        <ColumnDefinition
                            Width="*" />
                    </Grid.ColumnDefinitions>

                    <Viewbox
                        Grid.Column="0"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Left">

                        <telerik:Label
                            Content="Chart Data Update Frequency (3h)"
                            VerticalAlignment="Center" />

                    </Viewbox>

                    <Viewbox
                        Grid.Column="1"
                        StretchDirection="Both"
                        Stretch="Uniform"
                        HorizontalAlignment="Right">

                        <TextBox
                            Name="tbChartDataUpdateFrequency3h"
                            Width="100"
                            Text="{Binding Path=chartDataUpdateFrequency3h}"
                            LostFocus="tbChartDataUpdateFrequency3h_LostFocus"
                            KeyDown="tbChartDataUpdateFrequency3h_KeyDown" />

                    </Viewbox>
                    
                </Grid>

            </Grid>

        </telerik:GroupBox>

    </Grid>

</UserControl>
