<UserControl
    x:Class="HMS_Client.WindHeadingReadouts"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HMS_Client"
    mc:Ignorable="d"
    d:DesignHeight="650"
    d:DesignWidth="800">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="1*"/>
            <ColumnDefinition
                Width="3*"/>
            <ColumnDefinition
                Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="1*" />
            <RowDefinition
                Height="3*" />
            <RowDefinition
                Height="1*" />
        </Grid.RowDefinitions>

        <!--WIND SPEED-->
        <Grid
            Grid.Column="0"
            Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition
                    Height="3*" />
                <RowDefinition
                    Height="4*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="9*" />
                <ColumnDefinition
                    Width="7*" />
            </Grid.ColumnDefinitions>

            <!--<Rectangle
                Grid.ColumnSpan="3"
                Grid.RowSpan="2"
                Margin="8"
                Fill="{StaticResource ColorBackgroundSeparator}" />-->

            <Viewbox
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                StretchDirection="Both"
                Stretch="Uniform"
                HorizontalAlignment="Center">

                <telerik:Label
                    Content="Wind Speed"
                    FontSize="{StaticResource fontSizeLabelSmall}" />

            </Viewbox>

            <Separator
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="8,0,8,0"
                Height="1"
                VerticalAlignment="Bottom" />

            <Viewbox
                Grid.Row="1"
                Grid.Column="0"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="{Binding Path=windSpeedString}"
                    FontSize="{StaticResource fontSizeDataLarge}" />

            </Viewbox>

            <Viewbox
                Grid.Row="1"
                Grid.Column="1"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="KTS"
                    FontSize="{StaticResource fontSizeUnits}" />

            </Viewbox>

        </Grid>


        <!--WIND DIRECTION-->
        <Grid
            Grid.Row="2"
            MinWidth="140">

            <Grid.RowDefinitions>
                <RowDefinition
                    Height="3*" />
                <RowDefinition
                    Height="4*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="12*" />
                <ColumnDefinition
                    Width="7*" />
            </Grid.ColumnDefinitions>

            <!--<Rectangle
                Grid.ColumnSpan="3"
                Grid.RowSpan="2"
                Margin="8"
                Fill="{StaticResource ColorBackgroundSeparator}" />-->

            <Viewbox
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                StretchDirection="Both"
                Stretch="Uniform"
                HorizontalAlignment="Center">

                <telerik:Label
                    Content="Wind Direction"
                    FontSize="{StaticResource fontSizeLabelSmall}" />

            </Viewbox>

            <Separator
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="8,0,8,0"
                Height="1"
                VerticalAlignment="Bottom" />

            <Viewbox
                Grid.Row="1"
                Grid.Column="0"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="{Binding Path=windDirectionString}"
                    FontSize="{StaticResource fontSizeDataLarge}" />

            </Viewbox>

            <Viewbox
                Grid.Row="1"
                Grid.Column="1"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="M"
                    FontSize="{StaticResource fontSizeUnits}" />

            </Viewbox>

        </Grid>


        <!--WIND GUST-->
        <Grid
            Grid.Column="2"
            Grid.Row="0"
            MinWidth="140">

            <Grid.RowDefinitions>
                <RowDefinition
                    Height="3*" />
                <RowDefinition
                    Height="4*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="9*" />
                <ColumnDefinition
                    Width="7*" />
            </Grid.ColumnDefinitions>

            <!--<Rectangle
