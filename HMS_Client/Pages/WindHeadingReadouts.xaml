                Grid.RowSpan="2"
                Margin="8"
                Fill="{StaticResource ColorBackgroundSeparator}" />-->

            <Viewbox
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                StretchDirection="Both"
                Stretch="Uniform"
                HorizontalAlignment="Center">

                <telerik:Label
                    Content="Vessel Heading"
                    Grid.ColumnSpan="2"
                    FontSize="{StaticResource fontSizeLabelSmall}" />

            </Viewbox>

            <Separator
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Height="1"
                Margin="8,0,8,0"
                VerticalAlignment="Bottom" />

            <Viewbox
                Grid.Row="1"
                Grid.Column="0"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="{Binding Path=vesselHeadingString}"
                    FontSize="{StaticResource fontSizeDataLarge}" />

            </Viewbox>

            <Viewbox
                Grid.Row="1"
                Grid.Column="1"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="M"
                    FontSize="{StaticResource fontSizeUnits}" />

            </Viewbox>

        </Grid>


