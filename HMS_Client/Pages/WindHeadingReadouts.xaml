                <RowDefinition
                    Height="4*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="12*" />
                <ColumnDefinition
                    Width="7*" />
            </Grid.ColumnDefinitions>

            <!--<Rectangle
