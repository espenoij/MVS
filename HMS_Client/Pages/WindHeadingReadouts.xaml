            <Viewbox
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                StretchDirection="Both"
                Stretch="Uniform"
                HorizontalAlignment="Center">

                <telerik:Label
                    Content="Wind Gust"
                    FontSize="{StaticResource fontSizeLabelSmall}" />

            </Viewbox>

            <Separator
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="8,0,8,0"
                Height="1"
                VerticalAlignment="Bottom" />

            <Viewbox
                Grid.Row="1"
                Grid.Column="0"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="{Binding Path=windGustString}"
                    FontSize="{StaticResource fontSizeDataLarge}" />

            </Viewbox>

            <Viewbox
                Grid.Row="1"
                Grid.Column="1"
                StretchDirection="Both"
                Stretch="Uniform">

                <telerik:Label
                    Content="KTS"
                    FontSize="{StaticResource fontSizeUnits}" />

            </Viewbox>

        </Grid>

        <!--VESSEL HEADING-->
