    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d"
    d:DesignHeight="1280"
    d:DesignWidth="1920">

    <UserControl.Resources>

        <sys:Double
            x:Key="ChartWidth">1600</sys:Double>

        <sys:Double
            x:Key="ChartHeight">200</sys:Double>
        
    </UserControl.Resources>

    <Grid>

        <!--Helideck Motion History-->
        <telerik:GroupBox
            Header="HELIDECK MOTION HISTORY"
            Margin="8">

            <telerik:RadTabControl
                Margin="8">

                <!--==========================================================================-->
                <!--20-MINUTES-->
                <!--==========================================================================-->
                <telerik:RadTabItem>
                    <telerik:RadTabItem.Header>
                        <StackPanel
                            Orientation="Horizontal">
                            <Image
                                Width="24"
                                Source="..\Icons\outline_schedule_white_48dp.png" />
                            <TextBlock
                                Foreground="White"
                                FontSize="{StaticResource fontSizeTab}"
                                Text="20-minutes"
                                Margin="8,4,0,0" />
                        </StackPanel>
                    </telerik:RadTabItem.Header>

                    <Grid
                        Margin="8">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="4*" />
                            <ColumnDefinition
                                Width="48*" />
                            <ColumnDefinition
                                Width="6*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="9*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="9*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="9*" />
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="9*" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>

                        <!--PITCH-->
                        <Grid
                            Grid.Column="0"
                            Grid.Row="0">

                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="6*" />
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="6*" />
                            </Grid.RowDefinitions>


                            <Viewbox
                                Grid.Row="1"
                                StretchDirection="Both"
                                Stretch="Uniform"
                                HorizontalAlignment="Center">

                                <TextBlock
                                    Text="Pitch" />

                            </Viewbox>

                        </Grid>
                        
                        <telerik:RadCartesianChart
                            Grid.Column="1"
                            Grid.Row="0"
                            Name="chartPitch20m">

                            <telerik:LineSeries
                                ZIndex="200"
                                Stroke="{StaticResource ColorGraphLine}"
                                CategoryBinding="timestamp"
                                ValueBinding="graphData">

                                <telerik:LineSeries.RenderOptions>
                                    <telerik:XamlRenderOptions
                                        DefaultVisualsRenderMode="Batch" />
                                </telerik:LineSeries.RenderOptions>

                            </telerik:LineSeries>

                            <telerik:RadCartesianChart.HorizontalAxis>
                                <telerik:DateTimeContinuousAxis
                                    x:Name="chartPitchHorizontalAxis20m"
                                    MajorStepUnit="Minute"
                                    MajorStep="5"
                                    ShowLabels="False"
                                    PlotMode="OnTicks"
                                    TickOrigin="{Binding alignmentTime}"
                                    Minimum="{Binding alignmentTimeMin20m}"
                                    Maximum="{Binding alignmentTimeMax}" />
                            </telerik:RadCartesianChart.HorizontalAxis>

                            <telerik:RadCartesianChart.VerticalAxis>
                                <telerik:LinearAxis
                                    x:Name="chartPitchVerticalAxis20m"
                                    Maximum="{Binding pitchChartAxisMax20m}"
                                    Minimum="0" />
                            </telerik:RadCartesianChart.VerticalAxis>

                            <telerik:RadCartesianChart.Grid>
                                <telerik:CartesianChartGrid
                                    MajorLinesVisibility="XY" />
                            </telerik:RadCartesianChart.Grid>

                            <telerik:RadCartesianChart.Annotations>
                                <telerik:CartesianPlotBandAnnotation
                                    Axis="{Binding ElementName=chartPitchVerticalAxis20m}"
                                    From="{Binding pitchChartAnnotationGreenMax20m}"
                                    To="0"
                                    StrokeThickness="1"
                                    Fill="{StaticResource ColorGreenTranslucent}" />

                                <telerik:CartesianPlotBandAnnotation
                                    Axis="{Binding ElementName=chartPitchVerticalAxis20m}"
                                    From="{Binding pitchChartAnnotationRedTopMax20m}"
                                    To="{Binding pitchChartAnnotationRedTopMin20m}"
                                    StrokeThickness="1"
                                    Fill="{StaticResource ColorRedTranslucent}" />

                                <!--<telerik:CartesianGridLineAnnotation
                                    Axis="{Binding ElementName=chartPitchHorizontalAxis20m}"
                                    Value="{Binding tickAlignment5}"
                                    Stroke="Gray"
                                    StrokeThickness="1" />

                                <telerik:CartesianGridLineAnnotation
                                    Axis="{Binding ElementName=chartPitchHorizontalAxis20m}"
                                    Value="{Binding tickAlignment10}"
                                    Stroke="Gray"
                                    StrokeThickness="1" />

                                <telerik:CartesianGridLineAnnotation
                                    Axis="{Binding ElementName=chartPitchHorizontalAxis20m}"
                                    Value="{Binding tickAlignment15}"
                                    Stroke="Gray"
                                    StrokeThickness="1" />-->

                            </telerik:RadCartesianChart.Annotations>

                        </telerik:RadCartesianChart>

                        <Grid
                            Grid.Column="2"
                            Grid.Row="0"
                            Margin="8">

                            <Grid.RowDefinitions>
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="*" />
                                <RowDefinition
                                    Height="7*" />
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="1"
                                Name="gridMaxPitchUp">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition
                                        Width="4*" />
                                    <ColumnDefinition
                                        Width="2*" />
                                </Grid.ColumnDefinitions>

                                <Viewbox
                                    Grid.Column="0"
                                    StretchDirection="Both"
                                    Stretch="Uniform"
                                    HorizontalAlignment="Left">

                                    <TextBlock
                                        Text="Max Up" />

                                </Viewbox>

                                <Viewbox
                                    Grid.Column="1"
                                    StretchDirection="Both"
                                    Stretch="Uniform"
