<UserControl
    x:Class="MVS.MVSOutput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    mc:Ignorable="d"
    d:DesignHeight="1100"
    d:DesignWidth="1900">

    <UserControl.Resources>
        <Style
            x:Key="DataStatusColorCode"
            TargetType="telerik:GridViewRow"
            BasedOn="{StaticResource GridViewRowStyle}">
            <Style.Triggers>

                <DataTrigger
                    Binding="{Binding Path=statusString}"
                    Value="TIMEOUT_ERROR">
                    <Setter
                        Property="Background"
                        Value="{StaticResource ColorAmber}" />
                </DataTrigger>

                <DataTrigger
                    Binding="{Binding Path=statusString}"
                    Value="OK">
                    <Setter
                        Property="Background"
                        Value="{StaticResource ColorGreen}" />
                </DataTrigger>

                <DataTrigger
                    Binding="{Binding Path=statusString}"
                    Value="OK_NA">
                    <Setter
                        Property="Background"
                        Value="{StaticResource ColorGreen}" />
                </DataTrigger>

            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <telerik:GroupBox
        Header="MVS OUTPUT"
        Grid.Column="2"
        Margin="8">

        <telerik:RadGridView
            DockPanel.Dock="Left"
            Name="gvMVSOutputData"
            Margin="0,8,0,0"
            RowStyle="{StaticResource DataStatusColorCode}"
            IsManipulationEnabled="False"
            CanUserSortColumns="True"
            ShowGroupPanel="False"
            CanUserReorderColumns="False"
            CanUserDeleteRows="False"
            RowIndicatorVisibility="Collapsed"
            SelectionMode="Single"
            AutoGenerateColumns="False">

            <telerik:RadGridView.Columns>

                <telerik:GridViewDataColumn
                    Width="2*"
                    Header="Name"
                    IsReadOnly="True"
                    DataMemberBinding="{Binding name}" />
                <telerik:GridViewDataColumn
                    Width="*"
                    Header="Data"
                    IsReadOnly="True"
                    DataMemberBinding="{Binding dataString}" />
                <telerik:GridViewDataColumn
                    Width="*"
                    Header="ID"
                    IsReadOnly="True"
                    DataMemberBinding="{Binding id}" />
                <telerik:GridViewDataColumn
                    Width="*"
                    Header="Status"
                    IsReadOnly="True"
                    DataMemberBinding="{Binding statusString}" />

            </telerik:RadGridView.Columns>

        </telerik:RadGridView>

    </telerik:GroupBox>

</UserControl>
