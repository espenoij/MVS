                    NaN når den skal skjules-->
                    <Canvas.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform
                                ScaleX="{StaticResource compassScale}"
                                ScaleY="{StaticResource compassScale}" />
                            <SkewTransform />
                            <RotateTransform
                                Angle="{Binding Path=windDirectionRotation}" />
                            <TranslateTransform />
