                                    <DataTrigger
                                        Binding="{Binding Path=windArrowColor}"
                                        Value="white">
                                        <Setter
                                            Property="Fill"
                                            Value="{StaticResource ColorWhite}" />
                                    </DataTrigger>
                                    <DataTrigger
                                        Binding="{Binding Path=windArrowColor}"
                                        Value="blue">
