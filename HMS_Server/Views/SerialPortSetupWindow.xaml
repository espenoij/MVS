<telerik:RadWindow
    x:Class="HMS_Server.SerialPortSetupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:local="clr-namespace:HMS_Server"
    mc:Ignorable="d"
    telerik:Header="Serial Port Data Setup"
    WindowState="Maximized"
    Closed="RadWindow_Closed"
    Height="1010"
    Width="1600">

    <telerik:RadWindow.Resources>

        <ResourceDictionary>
            <Style
                TargetType="local:SerialPortSetupWindow"
                BasedOn="{StaticResource RadWindowStyle}" />
        </ResourceDictionary>

    </telerik:RadWindow.Resources>

    <telerik:RadWindow.Icon>
        <Image
            Height="32"
            Source="../Icons/swire_flag.ico" />
    </telerik:RadWindow.Icon>

    <DockPanel>

        <!--Status Bar-->
        <StatusBar
            DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock
                    Name="sensorMonitorStatus" />
            </StatusBarItem>
        </StatusBar>

        <Grid
            DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="400" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="8">

                <telerik:GroupBox
                    Header="Basic Information"
                    Margin="8">

                    <StackPanel>

                        <DockPanel>
                            <Label
                                Width="110"
                                Content="ID" />
                            <Label
                                Name="lbSensorID" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="110"
                                Content="Name"
                                VerticalAlignment="Center" />
                            <Label
                                Name="lbSensorName" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="110"
                                Content="Type"
                                VerticalAlignment="Center" />
                            <Label
                                Name="lbSensorType" />
                        </DockPanel>
                        
                    </StackPanel>

                </telerik:GroupBox>

                <!--Serial Port Configuration-->
                <telerik:GroupBox
                    Header="Connection"
                    Margin="8">
                    <StackPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Port Name"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboPortName"
                                SelectionChanged="cboCOMPort_SelectionChanged" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Baud Rate"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboBaudRate"
                                SelectionChanged="cboBaudRate_SelectionChanged" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Data Bits"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboDataBits"
                                SelectionChanged="cboDataBits_SelectionChanged" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Stop Bits"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboStopBits"
                                SelectionChanged="cboStopBits_SelectionChanged" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Data Parity"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboParity"
                                SelectionChanged="cboDataParity_SelectionChanged" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Hand Shake"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboHandShake"
                                SelectionChanged="cboHandShake_SelectionChanged" />
                        </DockPanel>

                    </StackPanel>
                </telerik:GroupBox>

                <!--Serial Port Controls-->
                <telerik:GroupBox
                    Header="Connection Controls"
                    Margin="8">

                    <StackPanel>
                        <StackPanel
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">

                            <Button
                                x:Name="btnSerialPortReaderStart"
                                Click="btnSerialPortReaderOpen_Click"
                                Width="110"
                                Margin="8"
                                Content="Open" />
                            <Button
                                x:Name="btnSerialPortReaderStop"
                                Click="btnSerialPortReaderClose_Click"
                                Width="110"
                                Margin="8"
                                IsEnabled="False"
                                Content="Close" />

                        </StackPanel>

                        <Rectangle
                            Width="auto"
                            Height="7"
                            Margin="8">
                            <Rectangle.Fill>
                                <VisualBrush
                                    Stretch="None">
                                    <VisualBrush.Visual>
                                        <Border
                                            x:Name="bSerialPortStatus"
                                            CornerRadius="3,3,3,3"
                                            Width="120"
                                            Height="7"
                                            Background="{StaticResource ColorRed}"
                                            BorderThickness="1"
                                            BorderBrush="Gray" />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Rectangle.Fill>
                        </Rectangle>

                    </StackPanel>

                </telerik:GroupBox>

                <!--Data Display-->
                <telerik:GroupBox
                    Header="Sensor Output"
                    Margin="8">

                    <StackPanel>

                        <DockPanel>
                            <Label
                                Width="160"
                                Content="Data Type"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Name="cboSensorDataType"
                                SelectionChanged="cboSensorDataType_SelectionChanged" />
                        </DockPanel>

                    </StackPanel>

                </telerik:GroupBox>

                <!--Data Display-->
                <telerik:GroupBox
                    Header="Data Display"
                    Margin="8">

                    <StackPanel>

                        <DockPanel>
                            
                            <Label
                                Width="160"
                                Content="Data Lines"
                                VerticalAlignment="Center" />

                            <TextBox
                                Name="tbDataLines"
                                Text="{Binding totalDataLinesString}"
                                LostFocus="tbDataLines_LostFocus"
                                KeyDown="tbDataLines_KeyDown" />

                        </DockPanel>

                        <CheckBox
                            x:Name="chkShowControlChars"
                            Checked="chkShowControlChars_Checked"
                            Unchecked="chkShowControlChars_Unchecked"
                            Content="Show Control Chars" />

                        <Button
                            x:Name="chkRawDataAllClear"
                            Click="chkRawDataAllClear_Click"
                            HorizontalAlignment="Left"
                            Content="Clear All" />

                    </StackPanel>

                </telerik:GroupBox>

            </StackPanel>

            <telerik:RadTabControl
                Grid.Row="0"
                Grid.Column="1"
                Margin="8"
                HeaderBackground="{StaticResource ColorHorizontalBarBackground}">

                <!--1. Packet Selection-->
                <telerik:RadTabItem
                    Name="tabPacketSelection"
                    Header="1: Packet Selection">

                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition
                                Width="*" />
                            <ColumnDefinition
                                Width="400" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition
                                Height="*" />
                            <RowDefinition
                                Height="*" />
                        </Grid.RowDefinitions>

                        <telerik:GroupBox
                            Header="Raw Data"
                            Grid.Column="0"
                            Grid.Row="0"
                            Margin="8">

                            <telerik:RadGridView
                                Name="lvRawData"
                                IsReadOnly="True"
                                IsManipulationEnabled="False"
                                CanUserSortColumns="False"
                                ShowGroupPanel="False"
                                ShowColumnHeaders="False"
                                RowHeight="25"
                                Margin="8"
                                CanUserReorderColumns="False"
                                CanUserDeleteRows="False"
                                RowIndicatorVisibility="Collapsed"
                                AutoGenerateColumns="False">

                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding data}" />
                                </telerik:RadGridView.Columns>

                            </telerik:RadGridView>

                        </telerik:GroupBox>

                        <!--SelectedPacket-->
                        <telerik:GroupBox
                            Header="Selected Packets"
                            Grid.Column="0"
                            Grid.Row="1"
                            Margin="8">

                            <telerik:RadGridView
                                Name="lvSelectedPackets"
                                IsReadOnly="True"
                                IsManipulationEnabled="False"
                                CanUserSortColumns="False"
                                ShowGroupPanel="False"
                                ShowColumnHeaders="False"
                                RowHeight="25"
                                Margin="8"
                                CanUserReorderColumns="False"
                                CanUserDeleteRows="False"
                                RowIndicatorVisibility="Collapsed"
                                AutoGenerateColumns="False">

                                <telerik:RadGridView.Columns>
                                    <telerik:GridViewDataColumn
                                        DataMemberBinding="{Binding data}" />
                                </telerik:RadGridView.Columns>

                            </telerik:RadGridView>

                        </telerik:GroupBox>

                        <telerik:GroupBox
                            Grid.Column="1"
                            Grid.Row="0"
                            Header="Packet Selection"
                            Margin="8">

                            <StackPanel
                                Margin="8">

                                <DockPanel>
                                    <Label
                                        Width="160"
                                        Content="Packet Header"
                                        VerticalAlignment="Center" />
                                    <TextBox
                                        Name="tbSelectedPacketHeader"
                                        LostFocus="tbSelectedPacketHeader_LostFocus"
                                        KeyDown="tbSelectedPacketHeader_KeyDown"/>
                                </DockPanel>

                                <DockPanel>
                                    <Label
                                        Width="160"
                                        Content="Packet End"
                                        VerticalAlignment="Center" />
                                    <TextBox
                                        Name="tbSelectedPacketEnd"
                                        LostFocus="tbSelectedPacketEnd_LostFocus"
                                        KeyDown="tbSelectedPacketEnd_KeyDown"/>
                                </DockPanel>

                            </StackPanel>

                        </telerik:GroupBox>

                    </Grid>

                </telerik:RadTabItem>

                <!--2. Data Selection-->
