                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Stop Bits" />
                            <Label
                                Name="lbSerialPortStopBits"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Parity" />
                            <Label
                                Name="lbSerialPortParity"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Hand Shake" />
                            <Label
                                Name="lbSerialPortHandShake"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Packet Header" />
                            <Label
                                Name="lbSerialPortPacketHeader"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Packet End" />
                            <Label
                                Name="lbSerialPortPacketEnd"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Input Type" />
                            <Label
                                Name="lbSerialPortInputType"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dpSerialPortBinaryBytes">
                            <Label
                                Width="180"
                                Content="Binary Type" />
                            <Label
                                Name="lbSerialPortBinaryBytes"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Delimiter" />
                            <Label
                                Name="lbSerialPortDelimiter"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Combine Fields" />
                            <Label
                                Name="lbSerialPortCombineFields"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Fixed Pos Data" />
                            <Label
                                Name="lbSerialPortFixedPosData"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Fixed Pos Data Start" />
                            <Label
                                Name="lbSerialPortFixedPosStart"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Fixed Pos Data Total" />
                            <Label
                                Name="lbSerialPortFixedPosTotal"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Data Field" />
                            <Label
                                Name="lbSerialPortDataField"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Decimal Separator" />
                            <Label
