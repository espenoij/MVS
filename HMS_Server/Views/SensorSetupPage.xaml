                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Auto Extract Value" />
                            <Label
                                Name="lbSerialPortAutoExtractValue"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 1: Type" />
                            <Label
                                Name="lbSerialPortCalculationType1"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 1: Parameter" />
                            <Label
                                Name="lbSerialPortCalculationParameter1"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 2: Type" />
                            <Label
                                Name="lbSerialPortCalculationType2"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 2: Parameter" />
                            <Label
                                Name="lbSerialPortCalculationParameter2"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 3: Type" />
                            <Label
                                Name="lbSerialPortCalculationType3"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 3: Parameter" />
                            <Label
                                Name="lbSerialPortCalculationParameter3"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 4: Type" />
                            <Label
                                Name="lbSerialPortCalculationType4"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 4: Parameter" />
                            <Label
                                Name="lbSerialPortCalculationParameter4"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                    </StackPanel>

                </telerik:GroupBox>

                <telerik:GroupBox
                    Name="gbSetupSummaryModbus"
                    Header="Setup Summery - MODBUS"
                    Visibility="Collapsed"
                    Margin="8">

                    <StackPanel
                        Margin="8">

                        <DockPanel
                            Name="dbModbusPortName">
                            <Label
                                Width="180"
                                Content="Port Name" />
                            <Label
                                Name="lbModbusPortName"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dbModbusBaudRate">
                            <Label
                                Width="180"
                                Content="Baud Rate" />
                            <Label
                                Name="lbModbusBaudRate"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dbModbusDataBits">
                            <Label
                                Width="180"
                                Content="Data Bits" />
                            <Label
                                Name="lbModbusDataBits"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dbModbusStopBits">
                            <Label
