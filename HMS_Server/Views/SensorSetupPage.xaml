                                Content="Stop Bits" />
                            <Label
                                Name="lbModbusStopBits"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dbModbusParity">
                            <Label
                                Width="180"
                                Content="Parity" />
                            <Label
                                Name="lbModbusParity"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dbModbusHandShake">
                            <Label
                                Width="180"
                                Content="Hand Shake" />
                            <Label
                                Name="lbModbusHandShake"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel
                            Name="dpModbusTCPAddress">
                            <Label
                                Width="180"
                                Content="TCP/IP Address" />
                            <Label
                                Name="lbModbusTCPAddress"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dpModbusTCPPort">
                            <Label
                                Width="180"
                                Content="TCP/IP Port" />
                            <Label
                                Name="lbModbusTCPPort"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Slave ID" />
                            <Label
                                Name="lbModbusSlaveID"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Data Field" />
                            <Label
                                Name="lbModbusDataAddress"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 1: Type" />
                            <Label
                                Name="lbModbusCalculationType1"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 1: Parameter" />
                            <Label
                                Name="lbModbusCalculationParameter1"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 2: Type" />
                            <Label
                                Name="lbModbusCalculationType2"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 2: Parameter" />
                            <Label
                                Name="lbModbusCalculationParameter2"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 3: Type" />
                            <Label
                                Name="lbModbusCalculationType3"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 3: Parameter" />
                            <Label
                                Name="lbModbusCalculationParameter3"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 4: Type" />
                            <Label
                                Name="lbModbusCalculationType4"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 4: Parameter" />
                            <Label
                                Name="lbModbusCalculationParameter4"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                    </StackPanel>

                </telerik:GroupBox>

                <telerik:GroupBox
                    Name="gbSetupSummaryFileReader"
                    Header="Setup Summery - File Reader"
                    Visibility="Collapsed"
                    Margin="8">

                    <StackPanel
                        Margin="8">

                        <DockPanel
                            Name="dbFileReaderFileFolder">
                            <Label
                                Width="100"
                                Content="File Folder" />
                            <Label
                                Name="lbFileReaderFileFolder"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dbFileReaderFileName">
                            <Label
                                Width="100"
                                Content="File Name" />
                            <Label
                                Name="lbFileReaderFileName"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel
                            Name="dbFileReaderFrequency">
                            <Label
                                Width="180"
                                Content="Read Frequency" />
                            <Label
                                Name="lbFileReaderFrequency"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel
                            Name="dbFileReaderDelimiter">
                            <Label
                                Width="180"
                                Content="Delimiter" />
                            <Label
                                Name="lbFileReaderDelimiter"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Fixed Pos Data" />
                            <Label
                                Name="lbFileReaderPosData"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Fixed Pos Data Start" />
                            <Label
                                Name="lbFileReaderFixedPosStart"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Fixed Pos Data Total" />
                            <Label
                                Name="lbFileReaderFixedPosTotal"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Data Field" />
                            <Label
                                Name="lbFileReaderDataField"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Decimal Separator" />
                            <Label
                                Name="lbFileReaderDecimalSeparator"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Auto Extract Value" />
                            <Label
                                Name="lbFileReaderAutoExtractValue"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <Separator />

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 1: Type" />
                            <Label
                                Name="lbFileReaderCalculationType1"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 1: Parameter" />
                            <Label
                                Name="lbFileReaderCalculationParameter1"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 2: Type" />
                            <Label
                                Name="lbFileReaderCalculationType2"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 2: Parameter" />
                            <Label
                                Name="lbFileReaderCalculationParameter2"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 3: Type" />
                            <Label
                                Name="lbFileReaderCalculationType3"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 3: Parameter" />
                            <Label
                                Name="lbFileReaderCalculationParameter3"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 4: Type" />
                            <Label
                                Name="lbFileReaderCalculationType4"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Calculation 4: Parameter" />
                            <Label
                                Name="lbFileReaderCalculationParameter4"
                                Width="auto"
                                Content="" />
                        </DockPanel>
                    </StackPanel>

                </telerik:GroupBox>

            </StackPanel>

            <telerik:RadGridView
                DockPanel.Dock="Left"
                Name="gvSensorSetupItems"
                Margin="8,0,0,8"
                ItemsSource="{Binding SensorData}"
                IsReadOnly="True"
                IsManipulationEnabled="True"
                CanUserSortColumns="True"
                ShowGroupPanel="False"
                CanUserReorderColumns="False"
                CanUserDeleteRows="True"
                RowIndicatorVisibility="Collapsed"
                SelectionMode="Single"
                AutoGenerateColumns="False"
                SelectionChanged="gvSensorSetupItems_SelectionChanged">

                <telerik:RadGridView.Columns>
                    <telerik:GridViewDataColumn
                        Width="80"
                        Header="ID"
                        DataMemberBinding="{Binding id}" />
                    <telerik:GridViewDataColumn
                        Width="120"
                        Header="Type"
                        DataMemberBinding="{Binding type}" />
                    <telerik:GridViewDataColumn
                        Width="150"
                        Header="Source"
                        DataMemberBinding="{Binding source}" />
                    <telerik:GridViewDataColumn
                        Width="*"
                        Header="Name"
                        DataMemberBinding="{Binding name}" />
                </telerik:RadGridView.Columns>

            </telerik:RadGridView>

        </Grid>

    </Grid>

</UserControl>
