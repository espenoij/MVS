<UserControl
    x:Class="HMS_Server.SensorSetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    mc:Ignorable="d"
    d:DesignHeight="1100"
    d:DesignWidth="1400">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition
                Height="70" />
            <RowDefinition
                Height="*" />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
                <ColumnDefinition
                    Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition
                    Height="auto" />
            </Grid.RowDefinitions>

            <!--Setup Controls-->
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                Margin="8">

                <Button
                    Name="btnStop"
                    Click="btnStop_Click"
                    Width="110">Stop</Button>

                <Button
                    Name="btnNew"
                    Click="btnNew_Click"
                    Width="110"
                    Margin="8,0,0,0">New</Button>
                <Button
                    Name="btnCopy"
                    Click="btnCopy_Click"
                    Width="110"
                    Margin="8,0,0,0">Copy</Button>
                <Button
                    Name="btnDelete"
                    Click="btnDelete_Click"
                    Width="110"
                    Margin="8,0,0,0">Delete</Button>

            </StackPanel>

            <!--Sensor Value Setup-->
            <StackPanel
                Name="spSensorValueSetupButtons"
                Grid.Row="0"
                Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                Margin="8">

                <Button
                    Name="btnSerialPortSetup"
                    Click="btnSerialPortSetup_Click"
                    Width="180"
                    Visibility="Collapsed">Serial Port Data Setup</Button>
                
                <Button
                    Name="btnModbusSetup"
                    Click="btnModbusSetup_Click"
                    Width="180"
                    Visibility="Collapsed">MODBUS Data Setup</Button>

                <Button
                    Name="btnFileReaderSetup"
                    Click="btnFileReaderSetup_Click"
                    Width="180"
                    Visibility="Collapsed">File Reader Data Setup</Button>

            </StackPanel>

        </Grid>


        <Grid
            Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition
                    Width="5*" />
                <ColumnDefinition
                    Width="2*" />
                <ColumnDefinition
                    Width="3*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="1">

                <telerik:GroupBox
                    Header="Basic Information"
                    Margin="8">

                    <StackPanel
                        Margin="8">

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="ID" />
                            <Label
                                Name="lbSensorID" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Name"
                                VerticalAlignment="Center" />
                            <TextBox
                                Name="tbSensorName"
                                LostFocus="tbSensorName_LostFocus"
                                KeyDown="tbSensorName_KeyDown"/>
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Type"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboSensorType"
                                DropDownClosed="cboSensorType_DropDownClosed" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="100"
                                Content="Description"
                                VerticalAlignment="Center" />
                            <TextBox
                                Height="90"
                                Name="tbSensorDescription"
                                LostFocus="tbSensorDescription_LostFocus"
                                KeyDown="tbSensorDescription_KeyDown"
                                TextWrapping="Wrap" />
                        </DockPanel>

                    </StackPanel>

                </telerik:GroupBox>


                <telerik:GroupBox
                    Name="gbSetupSummaryNone"
                    Header="Setup Summery"
                    Visibility="Collapsed">

                    <StackPanel
                        Height="350">

                        <DockPanel>
                            <Label
                                Content="None"
                                HorizontalAlignment="Left" />
                        </DockPanel>
                    </StackPanel>

                </telerik:GroupBox>

                <telerik:GroupBox
                    Header="Sensor Data Options"
                    Margin="8">

                    <StackPanel
                        Margin="8">

                        <CheckBox
                            Name="chkSaveToDatabase"
                            Checked="chkSaveToDatabase_Checked"
                            Unchecked="chkSaveToDatabase_Unchecked"
                            VerticalAlignment="Center">Save to Database</CheckBox>

                        <DockPanel>
                            <Label
                                Width="150"
                                Content="Save Frequency"
                                VerticalAlignment="Center" />
                            <telerik:RadComboBox
                                Width="auto"
                                Name="cboDBStorageFrequencyType"
                                SelectionChanged="cboDBStorageFrequencyType_SelectionChanged"
                                HorizontalAlignment="Right" />
                        </DockPanel>

                    </StackPanel>

                </telerik:GroupBox>

            </StackPanel>


            <StackPanel
                Grid.Column="2">

                <telerik:GroupBox
                    Name="gbSetupSummarySerialPort"
                    Header="Setup Summery - Serial Port"
                    Visibility="Visible"
                    Margin="8">

                    <StackPanel
                        Margin="8">

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Port Name" />
                            <Label
                                Name="lbSerialPortName"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
                                Content="Baud Rate" />
                            <Label
                                Name="lbSerialPortBaudRate"
                                Width="auto"
                                Content="" />
                        </DockPanel>

                        <DockPanel>
                            <Label
                                Width="180"
