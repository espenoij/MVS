<telerik:RadWindow
    x:Class="HMS_Server.DialogAdminMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:local="clr-namespace:HMS_Server"
    telerik:Header="Admin Mode"
    WindowStartupLocation="CenterScreen"
    Height="155"
    Width="340"
    telerik:StyleManager.Theme="Material">

    <telerik:RadWindow.Icon>
        <Image
            Height="32"
            Source="../Icons/swire_flag.ico" />
    </telerik:RadWindow.Icon>

    <telerik:RadWindow.Resources>
        <ResourceDictionary>
            <Style
                TargetType="local:DialogAdminMode"
                BasedOn="{StaticResource RadWindowStyle}" />
        </ResourceDictionary>
    </telerik:RadWindow.Resources>

    <StackPanel
        Margin="10"
        FocusManager.FocusedElement="{Binding ElementName=passwordBox}">
        <telerik:Label>Password:</telerik:Label>
        <telerik:RadPasswordBox
            x:Name="passwordBox"
            PasswordChar="*"
            PasswordChanged="passwordBox_PasswordChanged" />

    </StackPanel>

</telerik:RadWindow>
